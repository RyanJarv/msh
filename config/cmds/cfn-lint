#!/usr/bin/env msh compose
version: "3.8"
services:
  app:
    image: mshopt/cfn-python-lint:latest
    build:
      context: https://github.com/aws-cloudformation/cfn-python-lint.git
      cache_from:
        - alpine:3.12
        - python:3.8-alpine
    working_dir: /msh
    volumes:
      - type: bind
        read_only: true
        source: "../../config"
        target: "/msh/config"
